startup_message off

autodetach on
altscreen on
shelltitle "$ |bash"
defscrollback 10000
defutf8 on

vbell off

term xterm

hardstatus alwayslastline
hardstatus string '%{= Kd} %{= Kd}%-w%{= Kr}[%{= KW}%n %t%{= Kr}]%{= Kd}%+w %-= %{KG} %H%{KW}'
#hardstatus string '%{= Kd} %{= Kd}%-w%{= Kr}[%{= KW}%n %t%{= Kr}]%{= Kd}%+w %-= %{KG} %H%{KW}|%{KY}%101`%{KW}|%D %M %d %Y%{= Kc} %C%A%{-}'
#hardstatus string "%{rk}%H %{gk}%c %{yk}%M%d %{wk}%?%-Lw%?%{bw}%n*%f %t%?(%u)%?%{wk}%?%+Lw%?"

bind ' ' windowlist -b
bind ',' title

# fix scrollback in putty, this is cool!
termcapinfo xterm* ti@:te@
#termcapinfo xterm|xterms|xs|rxvt ti@:te@

# putty CTRL+left/right for window switching
bindkey "^[[D" prev
bindkey "^[[C" next

nonblock on

